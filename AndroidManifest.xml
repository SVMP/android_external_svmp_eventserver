<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.mitre.svmp.events">
    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="17"/>

    <permission android:name="org.mitre.svmp.permission.RECEIVE_BOOT_COMPLETED"
                android:label="BOOT_COMPLETED"
                android:protectionLevel="signatureOrSystem" />

    <permission android:name="org.mitre.svmp.permission.RECEIVE_LOCATION_ACTIONS"
                android:label="LOCATION_ACTIONS"
                android:protectionLevel="signatureOrSystem" />

    <permission android:name="org.mitre.svmp.permission.RECEIVE_INTERCEPT_NOTIFICATION"
                android:label="INTERCEPT_NOTIFICATION"
                android:protectionLevel="signatureOrSystem" />

    <permission android:name="org.mitre.svmp.permission.RECEIVE_INTERCEPT_INTENT"
                android:label="INTERCEPT_INTENT"
                android:protectionLevel="signatureOrSystem" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- we use this to control the Sensors socket -->
    <uses-permission android:name="android.permission.NET_ADMIN"/>

    <!-- we use this to inject sensor and touch events -->
    <uses-permission android:name="android.permission.INJECT_EVENTS"/>

    <!-- we use these to inject Location events -->
    <uses-permission android:name="org.mitre.svmp.permission.RECEIVE_LOCATION_ACTIONS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>

    <!-- we use this to intercept Intent events -->
    <uses-permission android:name="android.permission.CALL_PRIVILEGED"/>
    <uses-permission android:name="org.mitre.svmp.permission.RECEIVE_INTERCEPT_NOTIFICATION"/>
    <uses-permission android:name="org.mitre.svmp.permission.RECEIVE_INTERCEPT_INTENT"/>

    <!-- The webrtc shared library creates a trace file on the sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- we use this to read LogCat output -->
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application android:icon="@drawable/color_icon" android:label="@string/app_name" android:persistent="true">
        <service android:name=".BackgroundService"/>
        <receiver android:name=".BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <!-- we use this to intercept Dialer intent actions -->
        <activity android:name=".CallIntercept">
            <intent-filter>
                <action android:name="android.intent.action.CALL_BUTTON"/>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.DIAL"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <action android:name="android.intent.action.CALL_PRIVILEGED"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
